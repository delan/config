#!/bin/sh

usage () {
	echo "Usage: $(basename $0) [-n seconds] \$0 ..."
	exit 1
}

finish () {
	tput rmcup
	exit 0
}

trap finish INT

wait=2

[ $# -lt 1 ] && usage

while true; do case "$1" in
-n)
	[ $# -lt 2 ] && usage
	wait="$2"
	shift 2
	;;
--)
	shift
	break
	;;
-*)
	usage
	;;
*)
	break
	;;
esac; done

[ $# -lt 1 ] && usage

tput smcup
while true; do
	printf '%s\n\n' "$(date) ~ $wait s ~ $*"
	"$@"
	sleep "$wait"
	clear
done
